<h1>Add A New Poem</h1>

<%= form_for @poem do |f| %>
	<%= f.label :title %> 
	<%= f.text_field :title %>

	<%= f.label :author %> 
	<%= f.text_field :author %>

	<%= f.label :content %> 
	<%= f.text_area :content %>

	<%= f.submit "Create This Poem" %> 

	<%= link_to "back to the poet", poet_path( @poet ) %>
<% end %>