
<h1>edit this poem</h1>

<%= form_for @poem, url: poem_path(@poet,@poem) do |f| %>
	<%= f.label :title %> 
	<%= f.text_field :title %>

	<%= f.label :author %> 
	<%= f.text_field :author %>

	<%= f.label :content %> 
	<%= f.text_field :content %>

	<%= f.submit "save this poem" %> 
	<%= link_to "back to the poems", poems_path %>
<% end %>

	<%= link_to "delete this poem", poem_path(@poet, @poem), method: :delete, data: { confirm: 'Are you sure you want to delete this poem?'} %> 