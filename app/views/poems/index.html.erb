<h1>The Poems of <%=@poet.name%></h1>

<ol>
	<% @poet.poems.each do |p| %>
	<li>	
	<p> <%= p.title %> </p>
	<p> <%= p.author %> </p>
	<p> <%= p.content %> </p>
	<p> <%= link_to 'show', poem_path(@poet, p) %>
		<%= link_to "edit", edit_poem_path(@poet, p) %>
		<%= link_to "delete", poem_path(@poet, p), method: :delete, data: { confirm: 'Are you sure you want to delete this poem?'} %>  </p>
		
	</li>
	<% end %>
</ol>

<p><%= link_to "Add A New poem", new_poem_path %></p>
<p><%= link_to "back to the poet", poet_path(@poet) %></p>
<p><%= link_to "back to the welcome page", welcome_path(@poet.user) %></p>





