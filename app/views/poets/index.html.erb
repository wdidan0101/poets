<h1>Listing Poets</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Origin</th>
  </tr>
 
  <% @poets.each do |poet| %>
    <tr>
      <td> <%= link_to poet.name, poet %> </td> 
      <td><%= poet.origin %></td>
      <td><%= link_to 'Show', poet_path(poet) %></td>
      <td><%= link_to 'Edit', edit_poet_path(poet) %></td>
      <td><%= link_to 'Delete', poet_path(poet),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "add a poet", new_poet_path %>
</p>