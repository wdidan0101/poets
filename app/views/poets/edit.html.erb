<h3 class="text-center">the poetic work of </h3>
<h1 class="text-center"><%= @poet.name %> </h1>
<h4 class="text-center">of <%= @poet.origin %></h4>		

<%= image_tag @poet.avatar.url(:medium), class: "avatar" %>

<% if @poet.avatar %>
	<%= form_for @poet, url: poet_path(@poet), :html => { class: "form-center", :multipart => true } do |f| %>
	  <p>
	    <%= f.file_field :avatar %>
	  </p>
	  <p>
	    <%#= f.submit %>
	    <%= f.submit "Edit Poet Photo", class: "btn btn-default" %>
	  </p>
	<% end %>
<% end %>

<div class="filler"></div>

<% @poet.poems.each do |p| %>
	<div class="poem-list"> 
		<%#= link_to p.title, poem_path(@poet.id, p) %> 
		<%= p.title %>
		<%= link_to "show", poem_path(@poet.id, p) %> 
		<%= link_to "edit", edit_poem_path(@poet.id, p) %>
		<%= link_to "delete", poem_path(@poet.id, p), method: :delete, data: { confirm: 'Are you sure you want to delete this poem?'} %> 

	</div>
<% end %>

<div class="filler"></div>

<div class="options">
	<p><%= link_to "add a poem", new_poem_path(@poet) %></p> 
	<p><%= link_to "user page", welcome_path(@poet.user) %></p>
	<p> <%= link_to "delete this poet", @poet, method: :delete, data: { confirm: 'Are you sure you want to delete this poet?'} %> </p>
</div>
